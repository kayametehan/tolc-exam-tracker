# Telegram Bot Token - @BotFather'dan alın
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Chat ID - @userinfobot'tan alın
TELEGRAM_CHAT_ID=your_chat_id_here

# Kontrol aralığı (saniye) - varsayılan 300 (5 dakika)
CHECK_INTERVAL=300

# Bildirim sesi (yes/no) - varsayılan yes
NOTIFICATION_SOUND=yes

# Detaylı log (yes/no) - varsayılan no
VERBOSE_LOGGING=no

# Hata durumunda bildirim (yes/no) - varsayılan no
NOTIFY_ON_ERROR=no

# Heartbeat aralığı (saniye) - varsayılan 3600 (1 saat)
# Bot'un çalıştığını gösteren periyodik mesaj
HEARTBEAT_INTERVAL=3600

# Maksimum retry sayısı - varsayılan 3
MAX_RETRIES=3

# Test modu (yes/no) - varsayılan no
# Tek kontrol yapıp çıkar, bot geliştirme için
TEST_MODE=no
